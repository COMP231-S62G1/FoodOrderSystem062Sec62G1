<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="3dip" >

    <ImageView
        android:id="@+id/img"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:adjustViewBounds="true"
		android:scaleType="centerCrop"
		android:layout_width="80dp"
		android:layout_height="80dp"
        android:maxHeight="80dp"
        android:maxWidth="80dp"
        android:contentDescription="noteImage"
        android:layout_marginRight="5sp"
        android:layout_marginEnd="5sp"
        android:src="@drawable/note2" />

    <TextView
        android:id="@+id/info"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/img"
        android:layout_toLeftOf="@+id/btnRemove"
        android:layout_toStartOf="@+id/btnRemove"
        android:layout_toRightOf="@+id/img"
        android:layout_toEndOf="@+id/img"
        android:text="info"
        android:textSize="14sp" />

    <ImageButton
        android:id="@+id/btnRemove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignTop="@id/info"
        android:layout_marginRight="15sp"
        android:layout_marginEnd="15sp"
        android:src="@drawable/del" 
        android:contentDescription="Remove this item"/>
