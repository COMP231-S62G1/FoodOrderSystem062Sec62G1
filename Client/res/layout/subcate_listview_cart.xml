    <TextView
        android:id="@+id/totalPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/info"
        android:layout_alignLeft="@id/info"
        android:layout_alignStart="@id/info"
        android:textSize="16sp" 
        android:textStyle="bold"
        android:text="total" />
    
    <LinearLayout
		android:orientation = "horizontal" 
		android:layout_width = "wrap_content"
		android:layout_height = "wrap_content"
		android:layout_centerVertical="true"
		android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@id/totalPrice"
        android:layout_alignLeft="@id/totalPrice"
        android:layout_alignStart="@id/totalPrice" >
		
        <ImageButton
	        android:id="@+id/btnReduce"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/remove"
	        android:contentDescription="Reduce quantity" />
        
        <TextView
            android:id="@+id/txtQty1"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:textStyle="bold" 
            android:textSize="16sp"
            android:layout_marginStart="3sp"
            android:layout_marginEnd="3sp"
            android:layout_marginLeft="3sp"
            android:layout_marginRight="3sp"
            android:text="1"/>
        
        <!--
        <EditText
